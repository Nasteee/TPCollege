            {% block dataOnglet2 %}

                <p>Classe : {{ classe.nom }}</p>

                {% if parrain == false %}
                    <p>Cette élève n'a pas de parrain car il est en 3eme  </p>
                {% else %}
                    <p>Nom du Parrain : {{ parrain.prenom }} {{ parrain.nom }} </p>
                {% endif %}
                <p>A été evalué : {{ eleve.evaluations is empty ? 'Non' : 'Oui' }}  </p>

                {% if eleve.evaluations %}

                    <table class="table">
                    <thead>
                    <th scope="col">Evaluations</th>
                    <th scope="col">Professeurs</th>
                    <th scope="col">Dates</th>
                    <th scope="col">Note</th>

                    </thead>
                    <tbody>

                    {% for evaluation in eleve.evaluations %}
                        <tr>

                            <td>{{ evaluation.label }}</td>
                            <td>{{ evaluation.professor.nom }} {{ evaluation.professor.prenom }} </td>
                            <td>{{ evaluation.date }}</td>
                            <td>{{ evaluation.note }} / 20</td>

                        </tr>
                    {% endfor %}
                {% endif %}
                </tbody>
                </table>

            {% endblock %}




